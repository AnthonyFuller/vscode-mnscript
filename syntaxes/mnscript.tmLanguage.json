{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "MNScript",
	"patterns": [
		{
			"include": "#meta-class"
		},
		{
			"include": "#ent-class"
		},
		{
			"include": "#meta-functions"
		},
		{
			"include": "#ent-functions"
		},
		{
			"include": "#storage"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#punctuation"
		}
	],
	"repository": {
		"ent-class": {
			"contentName": "entity.name.class.mnscript",
			"begin": "class",
			"end": "{",
			"include": "#meta-functions"
		},
		"meta-class":{
			"patterns": [
				{
					"name": "meta.class.mnscript",
					"begin": "class",
					"end": "{",
					"include": "#ent-class"
				}
			]
		},
		"ent-functions": {
			"contentName": "entity.name.class.mnscript",
			"begin": "function<.*>|function",
			"end": "{",
			"include": "#main-loop"
			
		},
		"meta-functions": {
			"patterns": [
				{
					"name": "meta.function.mnscript",
					"begin": "function",
					"end": "{",
					"include": "#ent-functions"					
				}
			]
		},
		"main-loop": {
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#constants"
				},
				{
					"include": "#operators"
				},
				{
					"include": "#punctuation"
				},
				{
					"include": "#storage"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mnscript",
					"match": "\\b(if|while|return|using|include|else)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.mnscript",
					"match": "(?<![^.]\\.|:)\\b(false|true)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.mnscript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mnscript",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.line.double-slash.mnscript",
			"match": "(//).*$\\n?"
		},
		"numbers": {
			"name": "constant.numeric.mnscript",
			"match": "\\b\\d+(\\.\\d+)?"
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.mnscript",
					"match": "\\|\\||\\&\\&|==?|!=|<=?|>=?|(?<!\\.)\\.{2}(?!\\.)"
				},
				{
					"name": "keyword.operator.arithmetic.mnscript",
					"match": "\\+|-|%|#|\\*|\\/|\\^"
				},
				{
					"name": "keyword.operator.new.mnscript",
					"match": "\\bnew\\b"
				}
			]			
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.terminator.statement.mnscript",
					"match": ";"
				},
				{
					"name": "punctuation.separator.delimiter.mnscript",
					"match": ","
				}
			]
		},
		"storage":{
			"patterns": [
				{
					"name":"storage.function.mnscript",
					"match":"function|function<.*>"
				},
				{
					"name":"storage.class.mnscript",
					"match":"class"
				},
				{
					"name":"storage.type",
					"match": "string|number|bool"
				}
			]
		}
	},
	"scopeName": "source.mnscript"
}